<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cursomaana.appchampionsv1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_champions"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controllers.MainActivity" />
        <activity android:name=".Controllers.DetallePartido" />
        <activity
            android:name=".Controllers.InicioActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.DetalleEquipoActivity" />
        <activity android:name=".Controllers.DetallesJugador"></activity>
    </application>

</manifest>